lemon=float(input("Enter amount of lemon juice (in cups):\n"))
water=float(input("Enter amount of water (in cups):\n"))
nec=float(input("Enter amount of agave nectar (in cups):\n"))
ser=int(input("How many servings does this make?\n"))
print("\nLemonade ingredients - yields {0:.2f} servings".format(ser))
print("{0:.2f} cup(s) lemon juice".format(lemon))
print("{0:.2f} cup(s) water".format(water))
print("{0:.2f} cup(s) agave nectar".format(nec))

n=int(input("\nHow many servings would you like to make?\n"))
print("\nLemonade ingredients - yields {0:.2f} servings".format(n))
print("{0:.2f} cup(s) lemon juice".format(lemon*n/ser))
print("{0:.2f} cup(s) water".format(water*n/ser))
print("{0:.2f} cup(s) agave nectar".format(nec*n/ser))

print("\nLemonade ingredients - yields {0:.2f} servings".format(n))
print("{0:.2f} gallon(s) lemon juice".format(lemon*n/(ser*16)))
print("{0:.2f} gallon(s) water".format(water*n/(ser*16)))
print("{0:.2f} gallon(s) agave nectar".format(nec*n/(ser*16)))
